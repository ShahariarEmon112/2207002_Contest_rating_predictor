<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.contestpredictor.controller.LoginController"
            styleClass="login-root" prefWidth="1000" prefHeight="650">
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
            <HBox alignment="CENTER" spacing="0">
                <!-- Left Side - Welcome Panel -->
                <VBox styleClass="login-left-panel" alignment="CENTER" spacing="20" prefWidth="500">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>
                
                <Label text="ðŸ“Š" styleClass="login-icon">
                    <font>
                        <Font size="72"/>
                    </font>
                </Label>
                
                <Label text="Contest Rating Predictor" styleClass="login-brand">
                    <font>
                        <Font name="System Bold" size="32"/>
                    </font>
                </Label>
                
                <Label text="Predict your competitive programming ratings with advanced algorithms" 
                       styleClass="login-tagline" wrapText="true" textAlignment="CENTER" maxWidth="400">
                    <font>
                        <Font size="16"/>
                    </font>
                </Label>
                
                <VBox spacing="15" alignment="CENTER">
                    <Label text="âœ“ 30 Pre-registered accounts" styleClass="feature-text">
                        <font><Font size="14"/></font>
                    </Label>
                    <Label text="âœ“ AtCoder-style rating algorithm" styleClass="feature-text">
                        <font><Font size="14"/></font>
                    </Label>
                    <Label text="âœ“ Real-time predictions" styleClass="feature-text">
                        <font><Font size="14"/></font>
                    </Label>
                    <Label text="âœ“ Past &amp; Future contests" styleClass="feature-text">
                        <font><Font size="14"/></font>
                    </Label>
                </VBox>
            </VBox>
            
            <!-- Right Side - Login Form -->
            <VBox styleClass="login-right-panel" alignment="CENTER" spacing="25" prefWidth="500">
                <padding>
                    <Insets top="60" right="60" bottom="60" left="60"/>
                </padding>
                
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Welcome Back!" styleClass="login-title">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Label>
                    <Label text="Sign in to your account" styleClass="login-subtitle">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox spacing="20" maxWidth="350">
                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label text="Username" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" promptText="Enter your username" 
                                   styleClass="login-textfield">
                            <font>
                                <Font size="14"/>
                            </font>
                        </TextField>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label text="Password" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                       styleClass="login-textfield">
                            <font>
                                <Font size="14"/>
                            </font>
                        </PasswordField>
                    </VBox>
                    
                    <!-- Error Message -->
                    <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    
                    <!-- Login Button -->
                    <Button text="Sign In" styleClass="login-button" onAction="#handleLogin" 
                            maxWidth="Infinity" prefHeight="45">
                        <font>
                            <Font name="System Bold" size="15"/>
                        </font>
                    </Button>
                    
                    <Separator/>
                    
                    <!-- Register link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Don't have an account?" styleClass="login-subtitle">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <Label text="Create Account" styleClass="register-link" onMouseClicked="#handleGoToRegister">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Label>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Sample Credentials Info -->
                    <VBox spacing="10" styleClass="info-box" alignment="CENTER">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        <Label text="ðŸ’¡ Sample Login Credentials" styleClass="info-title">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Label>
                        <Label text="Username: user001 to user030" styleClass="info-text">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Label>
                        <Label text="Password: pass001 to pass030" styleClass="info-text">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Label>
                        <Label text="(e.g., user001 / pass001)" styleClass="info-text" style="-fx-font-style: italic;">
                            <font>
                                <Font size="11"/>
                            </font>
                        </Label>
                    </VBox>
                </VBox>
            </VBox>
            </HBox>
        </ScrollPane>
    </center>
</BorderPane>
