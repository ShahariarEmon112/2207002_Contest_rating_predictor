<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="profile-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.contestpredictor.controller.ProfileController">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20" styleClass="navbar">
            <padding>
                <Insets bottom="10" left="30" right="30" top="10" />
            </padding>
            
            <Label styleClass="navbar-brand" text="ðŸ“Š Contest Rating Predictor">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button fx:id="searchContestButton" onAction="#handleSearchContest" styleClass="navbar-button" text="Contest">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
            
            <Button onAction="#handlePredictor" styleClass="navbar-button" text="Predictor">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
            
            <Button onAction="#handleLogout" styleClass="navbar-button-logout" text="Logout">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
            <VBox alignment="TOP_CENTER" spacing="30" styleClass="profile-content">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>
                
                <!-- Profile Header -->
                <VBox alignment="CENTER" spacing="15" styleClass="profile-header">
                    <padding>
                    <Insets bottom="30" left="30" right="30" top="30" />
                </padding>
                
                <Label styleClass="profile-avatar" text="ðŸ‘¤">
                    <font>
                        <Font size="72.0" />
                    </font>
                </Label>
                
                <Label fx:id="fullNameLabel" styleClass="profile-name" text="User Name">
                    <font>
                        <Font name="System Bold" size="32" />
                    </font>
                </Label>
                
                <Label fx:id="usernameLabel" styleClass="profile-username" text="@username">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
            </VBox>
            
            <!-- Stats Cards -->
            <HBox alignment="CENTER" spacing="30">
                <!-- Current Rating Card -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="250" spacing="10" styleClass="stat-card">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    
                    <Label styleClass="stat-icon" text="â­">
                        <font>
                            <Font size="50.0" />
                        </font>
                    </Label>
                    
                    <Label blendMode="SRC_ATOP" styleClass="stat-label" text="Current Rating">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>
                    
                    <Label fx:id="ratingLabel" styleClass="stat-value" text="1000">
                        <font>
                            <Font name="System Bold" size="36" />
                        </font>
                    </Label>
                    
                    <Label fx:id="ratingColorLabel" styleClass="stat-sublabel" text="Gray">
                        <font>
                            <Font name="System Bold Italic" size="17.0" />
                        </font>
                    </Label>
                </VBox>
                
                <!-- Contests Participated Card -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="250" spacing="10" styleClass="stat-card">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    
                    <Label styleClass="stat-icon" text="ðŸ†">
                        <font>
                            <Font size="43.0" />
                        </font>
                    </Label>
                    
                    <Label blendMode="GREEN" styleClass="stat-label" text="Contests">
                        <font>
                            <Font name="System Bold" size="31.0" />
                        </font>
                    </Label>
                    
                    <Label fx:id="contestsLabel" styleClass="stat-value" text="0">
                        <font>
                            <Font name="System Bold" size="36" />
                        </font>
                    </Label>
                    
                    <Label styleClass="stat-sublabel" text="Participated">
                        <font>
                            <Font name="System Bold Italic" size="12.0" />
                        </font>
                    </Label>
                </VBox>
                
                <!-- Max Rating Card -->
                <VBox alignment="CENTER" prefHeight="180" prefWidth="250" spacing="10" styleClass="stat-card">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    
                    <Label styleClass="stat-icon" text="ðŸ“ˆ">
                        <font>
                            <Font size="44.0" />
                        </font>
                    </Label>
                    
                    <Label blendMode="MULTIPLY" styleClass="stat-label" text="Max Rating">
                        <font>
                            <Font name="System Bold" size="29.0" />
                        </font>
                    </Label>
                    
                    <Label fx:id="maxRatingLabel" styleClass="stat-value" text="1000">
                        <font>
                            <Font name="System Bold" size="36" />
                        </font>
                    </Label>
                    
                    <Label styleClass="stat-sublabel" text="Highest Ever Reached!">
                        <font>
                            <Font name="System Bold Italic" size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
            
            <!-- Quick Actions -->
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#handlePredictor" prefHeight="50" prefWidth="200" styleClass="action-button-primary" text="ðŸŽ¯ Predict Rating">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
                <Button onAction="#handleViewStandings" prefHeight="50" prefWidth="200" styleClass="action-button-primary" text="ðŸ“Š View Standings">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
            </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
