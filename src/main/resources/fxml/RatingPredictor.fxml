<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.contestpredictor.controller.RatingPredictorController"
            stylesheets="@../css/styles.css">
    
    <!-- Top Section: Title and Controls -->
    <top>
        <VBox spacing="15" styleClass="container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Title -->
            <Label text="Dynamic Rating Predictor (AtCoder Formula)" styleClass="title">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            
            <!-- Control Panel -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Number of Contestants:"/>
                <TextField fx:id="limitField" prefWidth="100" promptText="100"/>
                
                <Button fx:id="fetchButton" text="Fetch from API" onAction="#handleFetchContestants" styleClass="primary-button"/>
                <Button fx:id="predictButton" text="Predict Rating Changes" onAction="#handlePredictRatings" styleClass="primary-button"/>
                <Button fx:id="clearButton" text="Clear All" onAction="#handleClear"/>
                <Button fx:id="backButton" text="Back to Menu" onAction="#handleBack"/>
            </HBox>
            
            <!-- Status Label -->
            <Label fx:id="statusLabel" text="" style="-fx-text-fill: #2196F3;"/>
        </VBox>
    </top>
    
    <!-- Center: TableView -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            
            <TableView fx:id="contestantsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="handleColumn" text="Handle" prefWidth="120"/>
                    <TableColumn fx:id="oldRatingColumn" text="Old Rating" prefWidth="100"/>
                    <TableColumn fx:id="problemsSolvedColumn" text="Problems Solved" prefWidth="130"/>
                    <TableColumn fx:id="penaltyColumn" text="Penalty (min)" prefWidth="120"/>
                    <TableColumn fx:id="rankColumn" text="Rank" prefWidth="80"/>
                    <TableColumn fx:id="deltaColumn" text="Δ Rating" prefWidth="100"/>
                    <TableColumn fx:id="newRatingColumn" text="New Rating" prefWidth="110"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Statistics Panel -->
            <HBox spacing="30" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-background-radius: 5;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total Contestants" style="-fx-font-weight: bold;"/>
                    <Label fx:id="totalContestantsLabel" text="0" style="-fx-font-size: 18; -fx-text-fill: #2196F3;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Average Δ Rating" style="-fx-font-weight: bold;"/>
                    <Label fx:id="avgDeltaLabel" text="0" style="-fx-font-size: 18; -fx-text-fill: #4CAF50;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Max Gain" style="-fx-font-weight: bold;"/>
                    <Label fx:id="maxGainLabel" text="0" style="-fx-font-size: 18; -fx-text-fill: #4CAF50;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Max Loss" style="-fx-font-weight: bold;"/>
                    <Label fx:id="maxLossLabel" text="0" style="-fx-font-size: 18; -fx-text-fill: #f44336;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <!-- Bottom: Instructions -->
    <bottom>
        <VBox spacing="5" style="-fx-background-color: #e3f2fd; -fx-padding: 10;">
            <Label text="Instructions:" style="-fx-font-weight: bold;"/>
            <Label text="1. Click 'Fetch from API' to load active Codeforces users with random contest data"/>
            <Label text="2. Double-click 'Problems Solved' or 'Penalty' cells to edit values"/>
            <Label text="3. Ranks and ratings automatically recalculate when you change solve count or penalty"/>
            <Label text="4. Ratings calculated using AtCoder formula: Performance = AvgRating + 400*log2(N/rank)"/>
            <Label text="5. Lower penalty = better rank when problems solved are equal"/>
        </VBox>
    </bottom>
    
</BorderPane>
