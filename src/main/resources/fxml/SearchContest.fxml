<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="dashboard-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.contestpredictor.controller.ContestSearchController">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20" styleClass="navbar">
            <padding>
                <Insets bottom="10" left="30" right="30" top="10" />
            </padding>
            
            <Label styleClass="navbar-brand" text="ðŸ“Š Contest Rating Predictor">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label fx:id="usernameLabel" styleClass="username-label" text="Username">
                <font><Font name="System Bold" size="14" /></font>
            </Label>
            
            <Button onAction="#handlePredictor" styleClass="navbar-button" text="Predictor">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
            
            <Button onAction="#handleProfile" styleClass="navbar-button" text="Profile">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
            
            <Button onAction="#handleLogout" styleClass="navbar-button-logout" text="Logout">
                <font><Font name="System Bold" size="14" /></font>
            </Button>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="30" styleClass="dashboard-content">
            <padding>
                <Insets bottom="40" left="60" right="60" top="40" />
            </padding>
            
            <!-- Title Section -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="page-title" text="ðŸ” Search Contests">
                    <font>
                        <Font name="System Bold" size="36" />
                    </font>
                </Label>
                <Label styleClass="page-subtitle" text="Browse and search for past and upcoming contests">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
            </VBox>
            
            <!-- Search Section -->
            <VBox maxWidth="900" spacing="20" styleClass="search-container">
                <padding>
                    <Insets bottom="25" left="30" right="30" top="25" />
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <!-- Search Field -->
                    <TextField fx:id="searchField" prefWidth="400" promptText="Search by contest name or ID..." styleClass="search-field">
                        <font>
                            <Font size="14" />
                        </font>
                    </TextField>
                    
                    <!-- Filter ComboBox -->
                    <ComboBox fx:id="filterComboBox" prefWidth="180" style="-fx-font-size: 14px;" styleClass="search-field" />
                    
                    <!-- Search Button -->
                    <Button onAction="#handleSearch" prefWidth="120" styleClass="search-button" text="ðŸ” Search">
                        <font>
                            <Font name="System Bold" size="14" />
                        </font>
                    </Button>
                    
                    <!-- Clear Button -->
                    <Button onAction="#handleClear" prefWidth="100" styleClass="clear-button" text="Clear">
                        <font>
                            <Font name="System Bold" size="14" />
                        </font>
                    </Button>
                </HBox>
                
                <!-- Results Count -->
                <Label fx:id="resultsCountLabel" styleClass="page-subtitle" text="0 Contests Found!">
                    <font>
                        <Font name="System Bold Italic" size="20.0" />
                    </font>
                </Label>
            </VBox>
            
            <!-- Contests List -->
            <ScrollPane fitToWidth="true" prefHeight="400" styleClass="contests-scroll">
                <VBox fx:id="contestsContainer" maxWidth="900" spacing="20">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
