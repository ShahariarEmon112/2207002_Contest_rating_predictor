<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="create-contest-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.contestpredictor.controller.CreateLeaderboardContestController">
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="20" styleClass="create-contest-content">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="30" />
                </padding>
                
                <Label styleClass="section-title" text="Create New Leaderboard Contest">
                    <font><Font name="System Bold" size="22" /></font>
                </Label>
                
                <!-- Contest Details Form -->
                <VBox spacing="15" styleClass="section-box">
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <!-- Contest Name -->
                        <Label text="Contest Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font><Font size="14" /></font>
                        </Label>
                        <TextField fx:id="contestNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter contest name" />
                        
                        <!-- Description -->
                        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font><Font size="14" /></font>
                        </Label>
                        <TextArea fx:id="descriptionArea" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter contest description" wrapText="true" />
                        
                        <!-- Start Date -->
                        <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font><Font size="14" /></font>
                        </Label>
                        <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <!-- End Date -->
                        <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font><Font size="14" /></font>
                        </Label>
                        <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <!-- Max Problems -->
                        <Label text="Max Problems:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <font><Font size="14" /></font>
                        </Label>
                        <Spinner fx:id="maxProblemsSpinner" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="createButton" onAction="#handleCreate" styleClass="button-success" text="✅ Create Contest" prefWidth="150">
                        <font><Font size="14" /></font>
                    </Button>
                    <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="button-danger" text="❌ Cancel" prefWidth="150">
                        <font><Font size="14" /></font>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
