<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.contestpredictor.controller.AdminDashboardController"
            stylesheets="@../css/styles.css">
    
    <!-- Top Section: Admin Info and Actions -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #ff9800; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="ðŸ›¡ï¸ ADMIN DASHBOARD" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="adminNameLabel" text="Admin" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: white; -fx-text-fill: #ff9800; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center: TabPane for different admin functions -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            
            <!-- Tab 1: Manage Contests -->
            <Tab text="Manage Contests">
                <VBox spacing="15" style="-fx-padding: 20;">
                    
                    <!-- Create Contest Section -->
                    <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Create New Contest" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        
                        <GridPane hgap="15" vgap="10">
                            <Label text="Contest ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="contestIdField" promptText="e.g., CONTEST_001" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>
                            
                            <Label text="Contest Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="contestNameField" promptText="e.g., Weekly Contest #1" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>
                            
                            <Label text="Date & Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <DatePicker fx:id="contestDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300"/>
                            
                            <Label text="Duration (minutes):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <TextField fx:id="durationField" promptText="e.g., 120" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300"/>
                            
                            <Label text="Max Participants:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                            <TextField fx:id="maxParticipantsField" promptText="e.g., 1000" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300"/>
                            
                            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                <Button fx:id="createContestButton" text="Create Contest" onAction="#handleCreateContest" 
                                        styleClass="primary-button"/>
                                <Button text="Clear Form" onAction="#handleClearForm"/>
                            </HBox>
                        </GridPane>
                        
                        <Label fx:id="contestStatusLabel" text="" style="-fx-text-fill: #4CAF50;"/>
                    </VBox>
                    
                    <!-- Contests List -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label text="All Contests" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        
                        <TableView fx:id="contestsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="contestIdColumn" text="Contest ID" prefWidth="120"/>
                                <TableColumn fx:id="contestNameColumn" text="Contest Name" prefWidth="200"/>
                                <TableColumn fx:id="dateTimeColumn" text="Date & Time" prefWidth="150"/>
                                <TableColumn fx:id="durationColumn" text="Duration (min)" prefWidth="120"/>
                                <TableColumn fx:id="registrationsColumn" text="Registrations" prefWidth="120"/>
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>
            
            <!-- Tab 2: Manage Registrations -->
            <Tab text="Contest Registrations">
                <VBox spacing="15" style="-fx-padding: 20;">
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Select Contest:"/>
                        <ComboBox fx:id="contestSelector" promptText="Choose a contest" prefWidth="300"/>
                        <Button text="View Registrations" onAction="#handleViewRegistrations" styleClass="primary-button"/>
                    </HBox>
                    
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <Label text="Registered Users" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                            <Label fx:id="registrationCountLabel" text="(0 users)" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        </HBox>
                        
                        <TableView fx:id="registrationsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200"/>
                                <TableColumn fx:id="registeredAtColumn" text="Registered At" prefWidth="200"/>
                                <TableColumn fx:id="userActionsColumn" text="Actions" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>
            
            <!-- Tab 3: Statistics -->
            <Tab text="Statistics">
                <VBox spacing="20" style="-fx-padding: 30;" alignment="CENTER">
                    
                    <Label text="System Statistics" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="30" vgap="20" alignment="CENTER">
                        
                        <!-- Stat Card 1 -->
                        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #2196F3; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Total Contests" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                            <Label fx:id="totalContestsLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 48; -fx-font-weight: bold;"/>
                        </VBox>
                        
                        <!-- Stat Card 2 -->
                        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Total Users" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                            <Label fx:id="totalUsersLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 48; -fx-font-weight: bold;"/>
                        </VBox>
                        
                        <!-- Stat Card 3 -->
                        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #ff9800; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Active Contests" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                            <Label fx:id="activeContestsLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 48; -fx-font-weight: bold;"/>
                        </VBox>
                        
                        <!-- Stat Card 4 -->
                        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #9C27B0; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Total Registrations" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                            <Label fx:id="totalRegistrationsLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 48; -fx-font-weight: bold;"/>
                        </VBox>
                    </GridPane>
                    
                    <Button text="Refresh Statistics" onAction="#handleRefreshStats" styleClass="primary-button" style="-fx-font-size: 16; -fx-padding: 15 30;"/>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
</BorderPane>
